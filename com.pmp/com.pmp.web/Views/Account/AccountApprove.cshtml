
@{
    ViewBag.Title = "身份认证";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="nav_title">
    <span>我的信息->个人身份认证</span>
</div>
<div class="pmp_content">
    <div style="border-bottom: 1px solid #e1e1e1;height:80px; font-size:12px;padding:20px" id="div_person">
        <dl>
            <dt style="float:left">
                <img src="~/Images/card-01.jpg" />
            </dt>
            <dd style="float:left;padding:0 10px;">
                <p style="padding:0;margin:0">个人认证</p>
                <p style="padding:0;margin:0">需要身份证扫描或数码照片，需要1-3个工作日审核</p>
                <p style="padding:0;margin:0">认证通过后不能修改</p>
            </dd>
            <dd style="float:right">
                @if (ViewBag._Longin_Person_IsApprove == 2)
                {
                    <span style="color:#f60">已通过</span>
                }
                else if (ViewBag._Longin_Person_IsApprove == 1)
                {
                    <span style="color:#f60">审核中</span>
                }
                else if (ViewBag._Longin_Person_IsApprove == 3)
                {
                    <span style="color:#f60">审核失败</span>
                    <button class="btn btn_blue" id="btn_person_up">立刻认证</button>
                }
                else
                {
                    <button class="btn btn_blue" id="btn_person_up">立刻认证</button>
                }
            </dd>
        </dl>
    </div>

    <div style="border-bottom: 1px solid #e1e1e1;height:80px; font-size:12px;padding:20px" id="div_company">
        <dl>
            <dt style="float:left">
                <img src="~/Images/card-02.jpg" />
            </dt>
            <dd style="float:left;padding:0 10px;">
                <p style="padding:0;margin:0">企业认证</p>
                <p style="padding:0;margin:0">需要企业相关证件或数码照片，需要1-3个工作日审核</p>
                <p style="padding:0;margin:0">认证通过后企业信息不能修改</p>
            </dd>
            <dd style="float:right">
                @if (ViewBag._Longin_CompanyReal_IsApprove == 2)
                {
                    <span style="color:#f60">已通过</span>
                }
                else if (ViewBag._Longin_CompanyReal_IsApprove == 1)
                {
                    <span style="color:#f60">审核中</span>
                }
                else if (ViewBag._Longin_CompanyReal_IsApprove == 3)
                {
                    <span style="color:#f60">审核失败</span>
                    <button class="btn btn_blue" id="btn_company_up">立刻认证</button>
                }
                else
                {
                    <button class="btn btn_blue" id="btn_company_up">立刻认证</button>
                }
            </dd>
        </dl>
    </div>
</div>
<script>
    $(function () {
        if ($("#userLevel").val() == 1) {
            $("#div_company").hide();
        }
        else if ($("#userLevel").val() == 2) {
            $("#div_person").hide();
        }
    });

    $("#btn_person_up").click(function () {
        window.location.href = "/Account/AccountP_Approve";
    })
    $("#btn_company_up").click(function () {
        window.location.href = "/Account/AccountCompany_Approve";
    })
</script>