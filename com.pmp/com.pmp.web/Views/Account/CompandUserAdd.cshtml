@*@{
        ViewBag.Title = "员工管理-添加员工";
        Layout = "~/Views/Shared/_AccountLayout.cshtml";
    }*@
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/pmp_pub.css" rel="stylesheet" />
<script src="~/Scripts/js/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/layer/layer.js"></script>
<div style="border: 1px solid #e1e1e1; margin:20px">
    <input type="hidden" id="issesson" value="@ViewBag.IsSessonType" />

    <form class="form-horizontal" role="form" method="post" action="/Account/CompandUserAdd" style="margin:20px; ">
        <div class="form-group">
            <label for="txtphone" class="col-sm-2 control-label">手机号：</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="txtphone" name="txtphone" placeholder="手机号当做登录号" required="required">
            </div>
        </div>

        <div class="form-group">
            <label for="txtname" class="col-sm-2 control-label">真实姓名：</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="txtname" name="txtname" placeholder="请输入真实名字" required="required">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">性别：</label>
            <div class="col-sm-10">
                <label class="checkbox-inline">
                    <input type="radio" name="radiossex" checked="checked" value="1">男
                </label>
                <label class="checkbox-inline">
                    <input type="radio" name="radiossex" value="2">女
                </label>
            </div>
        </div>
        <div class="form-group">
            <label for="txtposition" class="col-sm-2 control-label">职位：</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="txtposition" name="txtposition" required="required" placeholder="职位">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" class="btn btn_blue" value="添加" />
            </div>
        </div>
    </form>
</div>

<script type="text/javascript">

    $("#txtphone").keyup(function () {
        $.get("/Account/IsExistPhone", { phone: $(this).val() },
            function (res) {
                if (res == "1") {
                    layer.msg("已存在账号！");
                    $(this).val("");
                    $("#txtphone").val("");
                }
            });
    });

    $(function () {
        if ($("#issesson").val() == "True") {
            window.parent.url();
        }
    })

</script>
