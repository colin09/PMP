
@{
    ViewBag.Title = "个人身份认证";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}
<div style="height:30px">
    <span>我的信息->个人身份认证</span>
</div>
<div>
    <h5 style="color: #333;font-size: 16px;">个人认证</h5>
</div>
<div style="padding:15px">
    <form class="form-horizontal" role="form" method="post" action="">
        <div class="form-group">
            <span style="color:red">*</span><label for="firstname" class="col-sm-2 control-label">真实姓名：</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="txtname" value="@Model.RealName" placeholder="请输入真实名字">
            </div>
        </div>
        <div class="form-group">
            <span style="color:red">*</span><label for="lastname" class="col-sm-2 control-label">身份证号：</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="txtname" value="" placeholder="身份证号">
            </div>
        </div>
        <div class="form-group">
            <span style="color:red">*</span>  <label for="lastname" class="col-sm-2 control-label">性别：</label>
            <div class="col-sm-10">
                <label class="checkbox-inline">
                    <input type="radio" name="radiossex" spellcheck="true" value="1" checked>男
                </label>
                <label class="checkbox-inline">
                    <input type="radio" name="radiossex" value="2">女
                </label>
            </div>
        </div>

        <div class="form-group">
            <span style="color:red">*</span>  <span style="color:red">*</span><label for="lastname" class="col-sm-2 control-label">身份证正面照：</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="txtname" value="" placeholder="身份证号">
            </div>
        </div>
        <div class="form-group">
            <span style="color:red">*</span><label for="lastname" class="col-sm-2 control-label">身份证背面照：</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="txtname" value="" placeholder="身份证号">
            </div>
        </div>
        <div class="form-group">
            <span style="color:red">*</span>  <label for="firstname" class="col-sm-2 control-label">身份证到期日期：</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="txtaddress" value="@Model.Address" placeholder="身份证到期日期">
            </div>
        </div>
        <div class="form-group">
            <span style="color:red">*</span>    <label for="firstname" class="col-sm-2 control-label">职业：</label>
            <div class="col-sm-10">
                <select class="form-control">
                    <option value="">请选择您的职业</option>
                    <option value="计算机/互联网/通信/电子">计算机/互联网/通信/电子</option>
                    <option value="销售/客服/技术支持">销售/客服/技术支持</option>
                    <option value="会计/金融/银行/保险">会计/金融/银行/保险</option>
                    <option value="生产/运营/采购/物流">生产/运营/采购/物流</option>
                    <option value="广告/市场/媒体/艺术">广告/市场/媒体/艺术</option>
                    <option value="生物/制药/医疗/护理">生物/制药/医疗/护理</option>
                    <option value="建筑/房地产">建筑/房地产</option>
                    <option value="人事/行政/高级管理">人事/行政/高级管理</option>
                    <option value="咨询/法律/教育/科研">咨询/法律/教育/科研</option>
                    <option value="服务业">服务业</option>
                    <option value="公务员/翻译/其他">公务员/翻译/其他</option>
                    <option value="职员">职员</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <span style="color:red">*</span> <label for="firstname" class="col-sm-2 control-label">联系电话：</label>
            <div class="col-sm-10">
                <span>110</span>
            </div>
        </div>

        <div class="form-group">
            <span style="color:red">*</span> <label for="firstname" class="col-sm-2 control-label">家庭或居住地址：</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="txtaddress" value="" placeholder="居住地址">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">提交审核</button>
            </div>
        </div>
    </form>
</div>
