
@{
    ViewBag.Title = "评价";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="ptb10 bb">
    <span>会员中心 > 评价信息</span>
    <input type="hidden" id="userLevel" value="@ViewBag.level" />
</div>

<div>
    <h3 class="ptb10">我的评价</h3>
</div>


<div class="mt25">
    <table class="table table-hover">
        <tr>
            <th class="w220">级别</th>
            <th class="w120">分数</th>
            <th>评价说明</th>
            <th class="w220">项目名称</th>
            <th class="w100">时间</th>
        </tr>
        @{ if (ViewBag.total > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Grade
                        </td>
                        <td>
                            @item.Score
                        </td>
                        <td>
                            <div class="descDiv3">
                                @item.Desc.TakeString(100)
                            </div>
                        </td>
                        <td>
                            @item.ProjectName
                        </td>
                        <td>
                            @item.CTime.ToString("yyyy-MM-dd")
                        </td>
                    </tr>

                }
            }
        }
    </table>
</div>